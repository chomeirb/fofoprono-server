{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true, // allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ]
}